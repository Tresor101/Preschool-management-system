{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Open with Chrome (Live Server)",
      "url": "http://localhost:5500/index.html",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": null,
      "runtimeArgs": ["--disable-web-security"],
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile"
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Open with Edge (Live Server)",
      "url": "http://localhost:5500/index.html",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": null
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Open index.html (Direct)",
      "file": "${workspaceFolder}/index.html"
    }
  ]
}
